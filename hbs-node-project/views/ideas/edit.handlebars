<div class="container">
    <p></p>
    <form action="/ideas/edit/{{idea.id}}" method="post">
        <input type="text" value="{{idea.id}}" hidden name="id">
        <div class="form-group">
            <label for="exampleInputEmail1">课程名称</label>
            <input type="text" maxlength="100" class="form-control" required name="title" value="{{idea.title}}">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">课程详情</label>
            <input type="text" class="form-control" name="detail" required value="{{idea.detail}}">
        </div>
        <button type="submit" class="btn btn-primary">保存</button>
    </form>

    {{#if error}}
        <p></p>
        <p class="alert alert-danger">{{error}}</p>
    {{/if}}
</div>
