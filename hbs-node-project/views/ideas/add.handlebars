<div class="container">
    <p></p>
    <form action="/ideas" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">课程名称</label>
            <input type="text" maxlength="100" class="form-control" name="ideaTitle" value="{{ideaTitle}}">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">课程详情</label>
            <input type="text" class="form-control" name="ideaDetail" value="{{ideaDetail}}">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

    {{#if error}}
        <p></p>
        <p class="alert alert-danger">{{error}}</p>
    {{/if}}
</div>
