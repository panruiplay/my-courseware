<style>
    .idea__item h3 {
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }
    .idea__item .detail {
        height: 40px;
        line-height: 20px;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        word-break: break-all;
        display: -webkit-box !important;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
</style>

<div class="container"  style="margin-top: 20px;">
    <div class="row">
        {{#each ideas}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail idea__item">
                    <div class="caption">
                        <h3>{{title}}</h3>
                        <p class="detail">{{detail}}</p>
                        <div style="display: flex">
                            <a href="/ideas/edit/{{id}}" class="btn btn-primary" role="button">编辑</a>
                            &emsp;
                            <form action="/ideas/remove/{{id}}" method="post">
                                <button type="submit" class="btn btn-danger">删除</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-sm-12">
                <h2>当前没有课程</h2>
            </div>
        {{/each}}
    </div>
</div>